{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "es5", "es6", "es2015", "es7", "es2016", "es2017"],
    "rootDir": "src",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "incremental": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
