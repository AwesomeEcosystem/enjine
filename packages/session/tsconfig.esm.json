{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2020",
    "target": "es6",
    "lib": ["dom"],
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "importHelpers": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "incremental": true,
    "moduleResolution": "node",
    "outDir": "dist/esm"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
